<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bg"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="133dp"
        app:srcCompat="@drawable/college" />

    <TextView
        android:id="@+id/headerid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Student Registration Form"
        android:textSize="20sp"
        android:gravity="center"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/stdid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Student id"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/stdid1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Your Student ID Here"
        android:inputType="number"
        android:minHeight="48dp" />

    <TextView
        android:id="@+id/nameid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/nameid1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter your name here"
        android:inputType="text"
        android:minHeight="48dp"
        tools:ignore="VisualLintTextFieldSize" />

    <TextView
        android:id="@+id/progid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Programme"
        android:textSize="18sp"
        android:textStyle="bold"/>


    <Spinner
        android:id="@+id/progid1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        />

    <TextView
        android:id="@+id/acaid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Academic Year"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/acaid1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter your academic year here"
        android:inputType="number"
        tools:ignore="TouchTargetSizeCheck,VisualLintTextFieldSize" />

    <TextView
        android:id="@+id/yearid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Year"
        android:textSize="18sp"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/yearid1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter your year"
        android:inputType="number"
        android:minHeight="48dp" />

    <TextView
        android:id="@+id/semid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Semester"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/semid1"
        android:orientation="horizontal"
        >

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="First"
               />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Second"
                />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Third"
                />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fourth"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fifth" />

    </RadioGroup>

    <TextView
        android:id="@+id/modid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Modules"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/modid1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Enter Your modules here"
        android:inputType="textMultiLine"
        android:minHeight="48dp" />

    <Button
        android:id="@+id/buttonid"
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_gravity="center"
        android:layout_marginTop="20sp"/>

</LinearLayout>